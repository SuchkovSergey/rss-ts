{
    "env": {
        "node": true,
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "requireConfigFile": false
    },
    "plugins": [
        "import",
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": 0,
        "indent": [ "error", 4 ],
        "no-param-reassign": [
            "error", { "props": false }
        ],
        "import/prefer-default-export": 0
    }
}